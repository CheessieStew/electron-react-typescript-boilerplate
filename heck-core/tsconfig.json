{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "outDir": "../bin/heck-core",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs" : true,
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ]
}
